@inherits ViewPage<Northwind.Data.Services.EntityCollectionResponse>

@{
    ViewBag.Title = "Entity Browser";
    Layout = "_Layout";
}      

<div class="row-fluid">
    <div class="span12">
        <div class="well">
            <div class="entity-browser">
                <h1>
                    Entity Browser
                </h1>
                This is where you browse your entities.
                <a href="/entities/meta">
                    <span class="label label-info">
                        meta
                    </span>
                </a>&nbsp;
                <a href="/entities?format=xml">
                    <span class="label label-info">
                        xml
                    </span>
                </a>&nbsp;
                <a href="/entities?format=json">
                    <span class="label label-info">
                        json
                    </span>
                </a>
            </div>
        </div>
        <div class="row-fluid">
        </div>
    @foreach (var entity in Model.Result)
    {
        <div class="row-fluid">
            <div class="span12">
                <div class="entity-row" style="margin-left:10px;">
                    <div class="span4">
                    <a href="@entity.MetaLink.Href">
                        <strong>
                           @Html.TitleCase(entity.Name) entities
                        </strong>
                    </a>
                    <br>
                    Browse your @Html.TitleCase(entity.Name) entities
                    </div>
                    <div class="span8">
                    <a href="@entity.MetaLink.Href">
                        <span class="label label-info">
                            html
                        </span>
                    </a>&nbsp;
                    <a href="@entity.MetaLink.Properties["MetaUri"]">
                        <span class="label label-info">
                            meta
                        </span>
                    </a>&nbsp;
                    <a href="@entity.MetaLink.Properties["XmlUri"]">
                        <span class="label label-info">
                            xml
                        </span>
                    </a>&nbsp;
                    <a href="@entity.MetaLink.Properties["JsonUri"]">
                        <span class="label label-info">
                            json
                        </span>
                    </a>
                        </div>
                </div>
            </div>
        </div>
        <hr style="margin:10px 0px;" />
    }
    </div>
</div>
 
